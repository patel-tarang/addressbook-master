{% extends 'base.html.twig' %}
{% block title %}
<title>Addressbook - Contact Details</title>
{% endblock %}
{% block stylesheets %}
<link href="{{ asset('assets/global/plugins/fancybox/source/jquery.fancybox.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
{% block body %}
<body class="page-container-bg-solid page-header-fixed page-sidebar-closed-hide-logo">
<div class="clearfix"></div>
<div class="page-container">
   <div class="page-content-wrapper">
      <div class="page-content">
         <div class="page-head">
            <div class="page-title">
               <h1>Addressbook &raquo; Contacts</h1>
            </div>
         </div>
         <ul class="page-breadcrumb breadcrumb">
            <li><a href="{{ app.request.getSchemeAndHttpHost() }}" title="Go Back Home">Home</a></li>
            <li><span class="active">Contact Details</span></li>
         </ul>
         <div class="row">
            <div class="col-md-12">
               <div class="portlet light portlet-fit portlet-datatable bordered ">
                  <div class="portlet-title">
                     <div class="caption">
                        <i class="fa fa-bank font-green"></i>
                        <span class="caption-subject font-green sbold uppercase">Contact Details</span>
                     </div>
                  </div>
                  <div class="portlet-body">
                     <form class="form-horizontal form-row-seperated" role="form">
                        <div class="form-body">
                           <h3 class="form-section">Basic Info.</h3>
                           <div class="row">
                              <div class="col-md-6">
                                 <div class="form-group">
                                    <label class="control-label col-md-3">Id</label>
                                    <div class="col-md-9">
                                       <p class="form-control-static"> {{contact.id}} </p>
                                    </div>
                                 </div>
                               </div>
                               <div class="col-md-6">
                                   <div class="form-group">
                                       <label class="control-label col-md-3">Name</label>
                                       <div class="col-md-9">
                                           <p class="form-control-static"> {{contact.firstName}} {{contact.lastName}}</p>
                                       </div>
                                   </div>
                               </div>
                           </div>
                           <div class="row">
                              <div class="col-md-6">
                                 <div class="form-group">
                                    <label class="control-label col-md-3">Email Address</label>
                                    <div class="col-md-9">
                                       <p class="form-control-static">{{contact.email}}</p>
                                    </div>
                                 </div>
                              </div>
                              <div class="col-md-6">
                                 <div class="form-group">
                                    <label class="control-label col-md-3">Phone Number</label>
                                    <div class="col-md-9">
                                       <p class="form-control-static"> {{contact.phoneNumber}} </p>
                                    </div>
                                 </div>
                              </div>
                           </div>
                           <div class="row">
                              <div class="col-md-6">
                                 <div class="form-group">
                                    <label class="control-label col-md-3">Birth Date</label>
                                    <div class="col-md-9">
                                       <p class="form-control-static">{{contact.birthDate}}</p>
                                    </div>
                                 </div>
                              </div>
                              <div class="col-md-6">
                                 <div class="form-group">
                                    <label class="control-label col-md-3">Profile Picture</label>
                                    <div class="col-md-9">
                                       <p class="form-control-static"> {% if contact.profilePicture is defined and contact.profilePicture is not empty %}<a href="{{ app.request.getSchemeAndHttpHost() }}/assets/uploads/{{contact.profilePicture}}" class="fancybox"><img src="{{ app.request.getSchemeAndHttpHost() }}/assets/uploads/{{contact.profilePicture}}" width="100" class="img-responsive" alt="{{contact.firstName}} {{contact.lastName}}" title="{{contact.firstName}} {{contact.lastName}}"></a>{% else %}N/A{% endif %}</p>
                                    </div>
                                 </div>
                              </div>
                           </div>
                           <h3 class="form-section">Address Info.</h3>
                           <div class="row">
                              <div class="col-md-6">
                                 <div class="form-group">
                                    <label class="control-label col-md-3">Street Number</label>
                                    <div class="col-md-9">
                                       <p class="form-control-static">{{contact.streetNumber}}</p>
                                    </div>
                                 </div>
                              </div>
                              <div class="col-md-6">
                                 <div class="form-group">
                                    <label class="control-label col-md-3">Street Name</label>
                                    <div class="col-md-9">
                                       <p class="form-control-static">{{contact.street}}</p>
                                    </div>
                                 </div>
                              </div>
                           </div>
                           <div class="row">
                              <div class="col-md-6">
                                 <div class="form-group">
                                    <label class="control-label col-md-3">City</label>
                                    <div class="col-md-9">
                                       <p class="form-control-static">{{contact.city}}</p>
                                    </div>
                                 </div>
                              </div>
                              <div class="col-md-6">
                                 <div class="form-group">
                                    <label class="control-label col-md-3">Zipcode</label>
                                    <div class="col-md-9">
                                       <p class="form-control-static">{{contact.zipcode}}</p>
                                    </div>
                                 </div>
                              </div>
                           </div>
                           <div class="row">
                              <div class="col-md-6">
                                 <div class="form-group">
                                    <label class="control-label col-md-3">Country</label>
                                    <div class="col-md-9">
                                       <p class="form-control-static">{{contact.country}}</p>
                                    </div>
                                 </div>
                              </div>
                           </div>   
                        </div>
                     </form>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
{% endblock %}
{% block javascripts %}
<script src="{{ asset('assets/global/js/app.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/global/js/layout.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/global/plugins/fancybox/source/jquery.fancybox.pack.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/js/contacts.js') }}" type="text/javascript"></script>
{% endblock %}