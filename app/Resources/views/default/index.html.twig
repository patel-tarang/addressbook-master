{% extends 'base.html.twig' %}
{% block title %}
<title>Addressbook - Contacts</title>
{% endblock %}
{% block stylesheets %}
<link href="{{ asset('assets/datatables/datatables.min.css') }}" rel="stylesheet" type="text/css" />
<link href="{{ asset('assets/global/plugins/bootstrap-sweetalert/sweetalert.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
{% block body %}
<body class="page-container-bg-solid page-header-fixed page-sidebar-closed-hide-logo">
  <div class="clearfix"></div>
  <div class="page-container">
      <div class="page-content-wrapper">
        <div>
           <div class="page-head">
              <div class="page-title">
                 <h1>Addressbook &raquo; Contacts</h1>
              </div>
           </div>
           <ul class="page-breadcrumb breadcrumb">
              <li><a href="{{ app.request.getSchemeAndHttpHost() }}" title="Go Back Home">Home</a></li>
              <li><span class="active">Contacts</span></li>
           </ul>
           <div class="row">
              <div class="col-md-12">
                 <div class="portlet light portlet-fit portlet-datatable">
                     <div class="portlet-title">
                        <div class="caption">
                           <i class="fa fa-bank font-green"></i>
                           <span class="caption-subject font-green sbold uppercase"> Contacts </span>
                        </div>
                        <div class="actions">
                          <div class="btn-group btn-group-devided">
                            <a class="btn btn-transparent blue btn-outline btn-circle btn-sm" id="addcontact" href="{{ app.request.getSchemeAndHttpHost() }}/addcontact" title="Add New Contact"> Add New <i class="fa fa-plus"></i></a>
                          </div>
                        </div>
                     </div>
                     <div class="portlet-body">
                        {% for flash_message in app.session.flashbag.get('success') %}
                          <div class="alert alert-success">{{flash_message}}</div>
                        {% endfor %}
                        <div class="table-container">
                          <form method="post" name="frmdatatable" id="frmdatatable" action="" class="form-horizontal">
                           <table class="table table-striped table-bordered table-hover table-checkable" id="datatable_ajax_contacts">
                              <thead>
                                 <tr role="row" class="heading">
                                    <th width="2%">
                                       <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                       <input type="checkbox" class="group-checkable"/>
                                       <span></span>
                                       </label>
                                    </th>
                                    <th width="15%">First Name</th>
                                    <th width="15%">Last Name</th>
                                    <th width="17%">Email Address</th>
                                    <th width="15%">Phone</th>
                                    <th width="15%">City</th>
                                    <th width="10%">Birth Date</th>
                                    <th width="11%">Actions</th>
                                 </tr>
                                 <tr role="row" class="filter">
                                    <td><a href="javascript:void(0);" title="Delete Contacts" class="delrows"><i class="fa fa-trash-o fafont"></i></a></td>
                                    <td><input type="text" class="form-control form-filter input-sm" name="first_name" id="first_name" value="" maxlength="100" /></td>
                                    <td><input type="text" class="form-control form-filter input-sm" name="last_name" id="last_name" value="" maxlength="200" /></td>
                                    <td><input type="text" class="form-control form-filter input-sm" name="email" id="email" value="" maxlength="255" /></td>
                                    <td><input type="text" class="form-control form-filter input-sm" name="phone_number" id="phone_number" value="" maxlength="20" /></td>
                                    <td><input type="text" class="form-control form-filter input-sm" name="city" id="city" value="" maxlength="100" /></td>
                                    <td></td>
                                    <td class="tdpadding">
                                       <button type="submit" class="btn btn-sm green filter-submit" name="record_filter" id="record_filter" title="Search Records"><i class="fa fa-search"></i></button>
                                       <button class="btn btn-sm green filter-cancel" title="Reset Search"><i class="fa fa-refresh"></i></button>
                                    </td>
                                  </tr>
                              </thead>
                              <tbody></tbody>
                           </table>
                          </form>
                        </div>
                     </div>
                  </div>
              </div>
           </div>
        </div>
     </div>
  </div>
{% endblock %}
{% block javascripts %}
<script src="{{ asset('assets/global/js/app.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/global/js/layout.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/global/js/datatable.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/global/plugins/datatables/datatables.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/global/plugins/bootstrap-sweetalert/sweetalert.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/js/general.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/js/contacts.js') }}" type="text/javascript"></script>
{% endblock %}